{
  "name": "s-i18n-react",
  "version": "0.0.1",
  "description": "Simple and powerfull i18n library for React Native.",
  "main": "src/index.js",
  "keywords": [
    "internationalization",
    "i18n",
    "translation",
    "localization",
    "l10n",
    "react",
    "react-native"
  ],
  "homepage": "https://github.com/s-i18n/s-i18n-react",
  "bugs": "https://github.com/s-i18n/s-i18n-react/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/s-i18n/s-i18n-react.git"
  },
  "dependencies": {
    "hoist-non-react-statics": "1.2.0",
    "prop-types": "^15.5.10",
    "react": "^16.0.0-alpha.12",
    "react-dom": "^16.0.0-alpha.12",
    "react-native": "^0.47.2"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-eslint": "7.2.3",
    "babel-jest": "19.0.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "6.24.1",
    "coveralls": "^2.11.12",
    "enzyme": "2.8.2",
    "eslint": "3.19.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.1",
    "eslint-plugin-react": "7.0.1",
    "jest": "19.0.2",
    "jest-cli": "19.0.2",
    "mkdirp": "0.5.1",
    "react-addons-test-utils": "^15.5.1",
    "yargs": "7.0.2"
  },
  "scripts": {
    "test": "BABEL_ENV=development jest --no-cache --runInBand",
    "test:watch": "BABEL_ENV=development jest --no-cache --watch",
    "test:coverage": "BABEL_ENV=development jest --no-cache --coverage",
    "test:lint": "./node_modules/.bin/eslint ./src"
  },
  "author": "Mehdi Achour <machour@gmail.com> (https://github.com/machour)",
  "license": "MIT",
  "directories": {
    "doc": "docs",
    "bin": "bin"
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "react"
    ],
    "testMatch": [
      "**/test/?(*.)(spec|test).js?(x)"
    ],
    "collectCoverageFrom": [
      "**/src/*.{js,jsx}",
      "!**/src/index.js",
      "!**/node_modules/**",
      "!**/test/**",
      "!**/example/**"
    ],
    "preset": "react-native"
  }
}
